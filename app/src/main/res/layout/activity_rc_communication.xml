<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rc_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="314dp"
        android:layout_marginTop="211dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_throttle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Throttle : 0"
            android:textColor="#444444"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_yaw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yaw : 0"
            android:textColor="#444444"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_pitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pitch : 0"
            android:textColor="#444444"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_roll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roll : 0"
            android:textColor="#444444"
            android:textSize="20dp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_joystick_right"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="40dp"
        android:background="@drawable/image_button_bg"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_joystick_left"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:background="@drawable/image_button_bg"></RelativeLayout>

    <Button
        android:id="@+id/btn_takeoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="315dp"
        android:layout_marginTop="91dp"
        android:text="@string/btn_takeoff" />

    <Switch
        android:id="@+id/switch_start_srv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="50dp"
        android:text="Start" />

    <Switch
        android:id="@+id/switch_lock_hgt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="299dp"
        android:layout_marginTop="156dp"
        android:text="Lock Hight" />
</RelativeLayout>